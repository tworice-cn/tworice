<view class="feedback-container">
    <view class="feedback-header">
      <text>{{form.fbType?'请填写【'+form.typeName+'】反馈信息':'请选择反馈类型'}}</text>
    </view>

    <view class="feedback-type" wx:if="{{form.fbType==''}}">
      <view class="type-item" wx:for="{{typeList}}" wx:key="id" data-id="{{item.id}}" data-typeName="{{item.typeName}}" bindtap="changeType">
        <view class="item-left">
          <view class="type-title">{{item.typeName}}</view>
          <view class="type-msg">{{item.typeDesc}}</view>
        </view>
        <view class="item-right">▶</view>
      </view>
    </view>

    <view class="feedback-form" wx:if="{{form.fbType}}">
      <form bindsubmit="submit">
        <view class="form-group">
          <text for="email">联系邮箱：</text>
          <input type="email" id="email" value="{{form.fbContact}}" bindinput="handleContactInput" />
        </view>
        <view class="form-group">
          <text for="message">反馈内容：</text>
          <!-- Editor 组件需要自行实现 -->
          <textarea value="{{form.fbDescribe}}" bindinput="handleDescribeInput"></textarea>
        </view>
        <button formType="submit" class="submit-button">提交反馈</button>
        <view class="reset">
          <text bindtap="resetType">重新选择</text>
        </view>
      </form>
    </view>
  </view>