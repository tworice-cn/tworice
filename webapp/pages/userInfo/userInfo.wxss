/* pages/info/info.wxss */
.top{
  height: 20vh;

}
.top-logo{
  font-size: 140rpx;
  text-align: center;
  line-height: 20vh;
  color: var(--themeColor);
}
.title{
  font-size: 1.3rem;
  font-weight: 600;
  text-align: center;
  line-height: 90rpx;
  color: var(--themeColor);
}


.input-item{
  padding: 10rpx 0;
}
.input-text{
  font-size: 35rpx;
  padding: 0 40rpx;
  line-height: 60rpx;
}
.input-box input{
  height: 80rpx;
  border-top: 1rpx solid #D9D9D9;
  border-bottom: 1rpx solid #D9D9D9;
  padding: 0 20rpx;
}
.input-box textarea{
  width: 100vw;
  border-top: 1rpx solid #D9D9D9;
  border-bottom: 1rpx solid #D9D9D9;
  padding: 0 20rpx;
}