/* pages/user/user.wxss */
.big{
  height: 100vh;
  width: 100vw;
  
}

/*上方头像 昵称 信息*/
.top-box{
  box-sizing: border-box;
  padding: 30rpx;
}
.top{
  height: 25vh;
  display: flex;
  border: 1px solid #E6E7E9;
  background-color: #fff;
  border-radius: 18rpx;
}
.top-left{
  flex: 3;
  display: flex;
  justify-content: center;
  align-items: center;
}
.avatar{
  width:10vh;
  height: 10vh;
  overflow: hidden;
  border-radius: 50%;
  padding: 1vh;
}
.avatar image{
  width:100%;
  height: 100%;
}

.top-right{
  flex: 7;
  padding: 9vh 50rpx;
  /* display: flex;
  align-items: center; */
}
.identity{
  font-size: 0.7rem;
  /* padding:0 30rpx; */
  color: rgb(0, 153, 153);
  padding: 10rpx 0;
}
.nickName{
  font-size: 1.3rem;

}

/*下方内容*/
.bottom{
  padding-top: 30rpx;
  
}
.bottom-item{
  background-color: #fff;
  line-height: 120rpx;
  display: flex;
  position: relative;
}
.bottom-item button{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}
.item-icon{
  padding: 0 20rpx;
  font-size: 2rem;
  color: var(--themeColor);
}
.item-icon-app{
  padding: 0 20rpx;
  font-size: 1.5rem;
  color: var(--themeColor);
}
.item-border{
  padding: 0 20rpx 0 20rpx;
  background-color: #fff;
}
.border-box{
  height: 2rpx;
  width: 100%;
  background-color: #F2F2F2;
}
.exit-button{
  justify-content: center;
  font-size: 1.1rem;
  color: #E8A94A;
}


.setting-item{
  background-color: #fff;
  width: 100%;
  padding: 0 20rpx;
  text-align: justify;
  display: flex;
  line-height: 100rpx;
  position: relative;
}
.item-icon{
  font-size: 48rpx;
}
.setting-item button,navigator{
  position: absolute;
  background-color: rgba(0,0,0,0);
}
.item-left{
  flex: 1;
  text-align: left;
}
.item-right{
  flex: 1;
  text-align: right;
}
.item-right icon{
  font-size:38rpx;
  /* padding-right: 50rpx; */
}