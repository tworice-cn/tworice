/* pages/login/login.wxss */
.top{
  height: 30vh;

}
.top-logo{
  font-size: 140rpx;
  text-align: center;
  line-height: 30vh;
  color: var(--themeColor);
}

.input-item{
  padding: 30rpx 0;
}
.input-text{
  font-size: 35rpx;
  padding: 0 40rpx;
  line-height: 60rpx;
}
.input-box input{
  height: 80rpx;
  border-top: 1rpx solid #D9D9D9;
  border-bottom: 1rpx solid #D9D9D9;
  padding: 0 20rpx;
}
.login-box{
  padding: 40rpx 0;
}
.reg-box{
  text-align: center;
  padding: 40rpx;
}
.reg-box .iconfont{
  font-size: 100rpx;
  color: var(--themeColor);
}

/*获取验证码*/
.code-box{
  width: 100vw;
  display: flex;
}
.code-input-box{
  flex: 1;
}
.code-input-box input{
  height: 80rpx;
  border-top: 1rpx solid #D9D9D9;
  border-bottom: 1rpx solid #D9D9D9;
  padding: 0 20rpx;
}
.get-code{
  flex: 1;
  text-align: center;
  /* background-color: var(--themeColor); */
  line-height: 80rpx;
  color: white;
  height: 80rpx;
}
.get-code image{
  height: 80rpx;
}