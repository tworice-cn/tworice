/* pages/showNotice/showNotice.wxss */
.main{
      height: auto;
      width: 100vw;
      padding: 30rpx 20rpx;
      margin: 0;
      box-sizing: border-box;
}
.title{
      height: 120rpx;
      line-height: 90rpx;
      text-align: left;
      font-size: 50rpx;
      font-weight: 700;
      padding-bottom: 30rpx;
}
.content{
      height: auto;
      padding: 30rpx 20rpx 0 20rpx;
      box-sizing: border-box;
      font-size: 40rpx;
      color: gray;
      border-top: 1rpx solid gray;
}

.notice-box{
      width: 100%;
      height: 100%;
      /* box-shadow: 0 0 10rpx gray; */
      border-radius: 30rpx;
      box-sizing: border-box;
      padding: 50rpx 30rpx;
      border: 2rpx solid #cacaca;
}
.notice-date{
      padding:50rpx 0 0 0;
      font-size: 30rpx;
      color: var(--fontColor);
      box-sizing: border-box;
}